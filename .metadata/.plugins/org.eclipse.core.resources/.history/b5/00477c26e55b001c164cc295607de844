package com.sist.dao;

import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.PreparedStatement;
import java.util.ArrayList;

import com.sist.vo.Product;

public class ProductDAO {
	String driver = "oracle.driver.OracleDriver";
	String url = "driver.oracle.thin.@localhost.1521.XE";
	String user = "c##madang";
	String pwd = "madang";
	
	public void insertProduct(Product p){
		String sql="insert into goods values(?,?,?,?,null)";
		Connection conn = null;
		PreparedStatement pstmt = null;
		try {
			Class.forName(driver);
			conn= DriverManager.getConnection(url, user, pwd);
			pstmt = conn.prepareStatement(sql);
			pstmt.setInt(p.getNo(),1);
			pstmt.setInt(p.getName(),2);
			pstmt.setInt(p.getPrice(),3);
			pstmt.setInt(p.getQnt(),4);
		} catch (Exception e) {
			System.out.println("예외발생:"+e.getMessage());
		}finally {
			try {
				if(pstmt!=null) pstmt.close();
				if(conn!=null) conn.close();
			} catch (Exception e2) {
				// TODO: handle exception
			}
		}
	}
}
